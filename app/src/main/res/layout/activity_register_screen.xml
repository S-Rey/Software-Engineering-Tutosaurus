<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.tutosaurus.RegisterScreenActivity">

    <TextView
        android:text="@string/instructions_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsRegister"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="normal|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameText"
        android:textSize="24sp"
        android:textColor="@android:color/holo_purple"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/instructionsRegister"
        android:layout_alignLeft="@+id/lastNameText"
        android:layout_alignStart="@+id/lastNameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstNameEntry"
        android:hint="@string/first_name"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@+id/firstNameText"
        android:layout_alignLeft="@+id/lastNameEntry"
        android:layout_alignStart="@+id/lastNameEntry" />

    <TextView
        android:text="@string/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameText"
        android:textSize="24sp"
        android:textColor="@android:color/holo_purple"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/firstNameEntry"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastNameEntry"
        android:hint="@string/last_name"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@+id/lastNameText"
        android:layout_alignLeft="@+id/emailAddressEntry"
        android:layout_alignStart="@+id/emailAddressEntry" />

    <TextView
        android:text="@string/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddressText"
        android:textSize="24sp"
        android:textColor="@android:color/holo_purple"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/lastNameEntry"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailAddressEntry"
        android:hint="@string/email_address"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@+id/emailAddressText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/sciper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sciperText"
        android:textSize="24sp"
        android:textColor="@android:color/holo_purple"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/emailAddressEntry"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/sciperEntry"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/sciper"
        android:layout_below="@+id/sciperText"
        android:layout_alignLeft="@+id/emailAddressEntry"
        android:layout_alignStart="@+id/emailAddressEntry" />

    <Button
        android:text="@string/send_information_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendButton"
        android:textSize="24sp"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
