<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.tutosaurus.RegisterScreenActivity">

    <TextView
        android:text="@string/instructions_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsRegister"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="normal|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="@string/send_information_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendButton"
        android:textSize="24sp"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="false"
        android:onClick="sendMessageForAccess"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/instructionsRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/register_gaspar_username"
        android:hint="gaspar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password"
        android:hint="Password"
        android:layout_below="@+id/register_gaspar_username"
        android:layout_alignLeft="@+id/register_gaspar_username"
        android:layout_alignStart="@+id/register_gaspar_username" />

    <Button
        android:text="Log in with tequila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/register_login"
        android:layout_below="@+id/register_password"
        android:layout_centerHorizontal="true"
        android:onClick="logIn" />

</RelativeLayout>
