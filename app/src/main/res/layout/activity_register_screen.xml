<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.tutosaurus.RegisterScreenActivity">


    <TextView
        android:text="@string/instructions_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsRegister"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|italic"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/dino_register"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:maxHeight="200dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Register with tequila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerLogin"
        android:onClick="register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/send_information_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmButton"
        android:textSize="24sp"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/holo_blue_dark"
        android:textAllCaps="false"
        android:onClick="sendMessageForAccess"
        android:textStyle="normal|bold|italic"
        android:layout_above="@+id/registerLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registerPassword"
        android:hint="@string/password"
        android:layout_alignBottom="@+id/confirmButton"
        android:layout_alignLeft="@+id/registerGaspar"
        android:layout_alignStart="@+id/registerGaspar"
        android:layout_marginBottom="55dp"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_background" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registerGaspar"
        android:hint="@string/gaspar"
        android:layout_above="@+id/registerPassword"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_background" />

</RelativeLayout>
