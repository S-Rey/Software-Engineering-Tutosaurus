<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.tutosaurus.ConfirmationActivity">

    <TextView
        android:text="@string/thanks_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="118dp"
        android:id="@+id/firstThanksMessage"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_green_dark"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/thanks_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondThanksMessage"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/firstThanksMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/back_to_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backToLoginButton"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/secondThanksMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:onClick="sendMessageForLogin" />
</RelativeLayout>
