<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.tutosaurus.ConfirmationActivity">

    <TextView
        android:text="@string/thanks_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/firstThanksMessage"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_green_dark"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/thanks_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondThanksMessage"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/firstThanksMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/recap_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recapMessage"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/firstNameProvided"
        android:layout_alignRight="@+id/firstThanksMessage"
        android:layout_alignEnd="@+id/firstThanksMessage" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameProvided"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/firstThanksMessage"
        android:layout_alignStart="@+id/firstThanksMessage" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameProvided"
        android:layout_marginTop="33dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/firstNameProvided"
        android:layout_alignLeft="@+id/firstNameProvided"
        android:layout_alignStart="@+id/firstNameProvided" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddressProvided"
        android:layout_marginTop="34dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/lastNameProvided"
        android:layout_alignLeft="@+id/lastNameProvided"
        android:layout_alignStart="@+id/lastNameProvided" />

    <Button
        android:text="@string/back_to_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backToLoginButton"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@android:color/holo_red_dark"
        android:onClick="sendMessageForLogin"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
