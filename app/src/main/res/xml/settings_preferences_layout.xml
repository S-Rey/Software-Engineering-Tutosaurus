<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="checkbox_preference_notification"
        android:id="@+id/checkbox_notifications"
        android:title="@string/enable_notifications"
        android:layout="@layout/preference_checkbox" />

    <PreferenceScreen
        android:layout="@layout/preference_divider"
        android:selectable="false">
    </PreferenceScreen>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="checkbox_preference_calendar"
        android:id="@+id/checkbox_calendar"
        android:title="@string/sync_calendar"
        android:layout="@layout/preference_checkbox" />

    <PreferenceScreen
        android:layout="@layout/preference_divider"
        android:selectable="false">
    </PreferenceScreen>

    <PreferenceScreen
        android:title="@string/rate_app"
        android:key="intent_preference_rating"
        android:layout="@layout/preference_intent">
        <intent android:action="android.intent.action.VIEW"
            android:data="http://google.com/" />
    </PreferenceScreen>

    <PreferenceScreen
        android:layout="@layout/preference_divider"
        android:selectable="false">
    </PreferenceScreen>

    <PreferenceScreen
        android:layout="@layout/preference_blank"
        android:selectable="false">
    </PreferenceScreen>

</PreferenceScreen>