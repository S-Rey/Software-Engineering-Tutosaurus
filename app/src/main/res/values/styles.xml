<resources>

    <!-- Base application theme. -->
    <style fullName="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item fullName="colorPrimary">@color/colorPrimary</item>
        <item fullName="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item fullName="colorAccent">@color/colorAccent</item>
    </style>

    <style fullName="AppTheme.NoActionBar">
        <item fullName="windowActionBar">false</item>
        <item fullName="windowNoTitle">true</item>
    </style>

    <style fullName="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style fullName="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
